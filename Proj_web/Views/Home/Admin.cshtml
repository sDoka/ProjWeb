@model IEnumerable<Proj_web.Models.Shop>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
@using (Html.BeginForm())
{
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>admin</title>
</head>
<body>
    <div>      
                        <table width="100%" height="100%" cellspacing="0">

                            
                            @foreach (var item in Model)
                            {
                                <tr height="15px" valign="top">
                                    <td valign="top">@item.Id</td>
                                    <td valign="top">@item.Name</td>
                                    <td valign="top"> 
                                    @Html.ActionLink("Изменить", "Edit", new { item.Id })</td>                                    
                                    <td valign="top">
                                        @using (Html.BeginForm("Admin_del", "Home"))
                                        {
                                            @Html.Hidden("Id", item.Id)
                                            <input type="submit"
                                                   value="Удалить" />

                                        }
                                    </td>
                                </tr>
                            }
                        </table>                                                
        @Html.ActionLink("Добавить магазин", "Create")
        
    </div>
</body>
</html>
}
