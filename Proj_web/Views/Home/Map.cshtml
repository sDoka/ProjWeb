@model IEnumerable<Proj_web.Models.Shop>
@{
    Layout = null;
}
@using (Html.BeginForm())
{
<!DOCTYPE html>

<html>
<head>
    <title></title>
    <meta name="viewport" content="width=device-width" />
    <link type="text/css" rel="stylesheet" href="~/Content/themes/Site.css" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <script src="@Url.Content("http://api-maps.yandex.ru/2.1/?lang=ru_RU")" type="text/javascript"></script>
    <script src="@Url.Content("~/scripts/mapinit.js")" type="text/javascript"></script>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no, maximum-scale=1" />
</head>
<body>

    <form name="search_input">
        <table width="100%" height="100%" cellspacing="0">
            <tr height="5%" id="toptr" valign="middle">
                <td width="20%" align="LEFT" valign="middle" id="tld"><p align="center" id="str">Список магазинов</p></td>
                <td>
                    <input id="searchfield" autocomplete="off" class="layer1" type="TEXT" name="SRCH" maxlength="40" size="100" align="right">
                    <input type="button" id="searchbutton" value=" Поиск " onclick="search_map()" align="right" height="30" width="50">
                    <div id="search_advice_wrapper"></div>
                </td>
            </tr>

            <tr>
                <td width="20%" align="LEFT" valign="top" class="lc">
                    
           @foreach (var b in Model)//выводит список всех магазинов
           {
            <div name="@b.Id" onclick="place_mark(@b.Id)" class="block">
                <span style="font-size:16px;"> @b.Name </span>
                <br>@b.Address - @b.Phone
                <input type="hidden" id="@b.Id" name="@b.CoordinatesY" value="@b.CoordinatesX" />
            </div>
           }
                 

                </td>
                <td>
                    <div id="map"></div>
                </td>

            </tr>
        </table>
    </form>

</body>
</html>
    }